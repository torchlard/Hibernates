<hibernate-configuration>
  <session-factory>
    <property name="hbm2ddl.auto">update</property>
    <property name="dialet">org.hibernate.dialect.MariaDBDialect</property>
    <property name="connection.url">jdbc:mariadb://localhost:3306/testdb</property>
    <property name="connection.username">root</property>
    <property name="connection.password">666666</property>
    <property name="connection.driver_class">org.mariadb.jdbc.Driver</property>
    <property name="hibernate.connection.autocommit">true</property>


    <!-- <mapping resource="mapping.xml" /> -->
    <mapping class="DB.Teacher" />
  </session-factory>
  
</hibernate-configuration>




